<div class="card">
  <div class="card-header">My Task</div>
  <div class="card-body">
    <h2><%= @task.title %></h2>
    <p><%= @task.details %></p>

    <% if @task.completed %>
      <p><%= "Done!" %></p>
    <% else  %>
      <p> <%= "Not done yet" %></p>
    <% end %>

    <p><%= link_to 'Back to list  ', tasks_path, class: "text-decoration-none" %> <i class="fa-regular fa-circle-left"></i></p>
    <p><%= link_to "Edit  ", edit_task_path(@task), class: "text-decoration-none" %> <i class="fa-regular fa-pen-to-square"></i></p>
    <p><%= link_to "Delete  ", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none" %> <i class="fa-regular fa-trash-can"></i></p>
  </div>
</div>
